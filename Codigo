menu = """
===========================
[üè¶/d] Depositar
[üí∏/s] Sacar
[üìú/e] Extrato
[‚ùå/q] Sair
===========================
=> """

saldo = 0
extrato = []
limite = 500
numero_saques = 0
LIMITE_SAQUES = 3

while True:
    opcao = input(menu)
    if opcao.lower() in ["d", "üè¶"]:
        print("=========Dep√≥sito=========")
        deposito = float(input("Qual √© o valor do dep√≥sito?\n=>"))
        extrato.append(str(deposito))
        saldo += deposito
    elif opcao.lower() in ["s", "üí∏"]:
        print("=========Saque=========")
        saque = float(input("Qual √© o valor que deseja sacar?\n=>"))
        if saldo >= saque > 0:
            if saque <= 500:
                numero_saques += 1
                if numero_saques > LIMITE_SAQUES:
                    print("Uso di√°rio atingido! Retorne amanh√£.")
                else:
                    extrato.append(str(-saque))  # Adiciona valor negativo para representar saque
                    saldo -= saque
            else:
                print("Saques de no m√°ximo 500 reais! Use outro valor.")
        else:
            print("Valor de saque inv√°lido ou saldo insuficiente.")
    elif opcao.lower() in ["e", "üìú"]:
        print("=========Extrato=========")
        if len(extrato) == 0:
            print("Nenhuma opera√ß√£o realizada ainda.")
        else:
            print(extrato)
        print(f"Saldo: R${saldo:.2f}")
    elif opcao.lower() in ["q", "‚ùå"]:
        break
    else:
        print("Opera√ß√£o inv√°lida! Por favor, selecione outra")
